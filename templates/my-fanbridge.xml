<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>FanBridge</Name>
  <Description>FanBridge – Unraid drive temp → PWM fan control.[br]Unprivileged by default: map your serial device via Device and optionally expose /dev/serial/by-id (ro) for stable symlinks.</Description>
  <Registry>https://github.com/RoBro92/fanbridge/pkgs/container/fanbridge</Registry>
  <Repository>ghcr.io/robro92/fanbridge:latest</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/fanbridge</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/local/emhttp/disks.ini</HostDir>
      <ContainerDir>/unraid/disks.ini</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/dev/serial/by-id</HostDir>
      <ContainerDir>/dev/serial/by-id</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Version>1.0.0</Version>
  <WebUI>http://[IP]:[PORT:8080]/</WebUI>
  <Banner></Banner>
  <Icon>https://raw.githubusercontent.com/RoBro92/fanbridge-unraid-templates/master/icons/fanbridge.png</Icon>
  <ExtraParams>--label net.unraid.docker.managed=dockerman --label net.unraid.docker.webui='http://[IP]:[PORT:8080]/' --label net.unraid.docker.icon='https://raw.githubusercontent.com/RoBro92/fanbridge-unraid-templates/master/icons/fanbridge.png'</ExtraParams>
</Container>
